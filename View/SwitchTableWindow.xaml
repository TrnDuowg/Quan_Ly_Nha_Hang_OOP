<Window x:Class="QuanLyNhaHang.View.SwitchTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Chuyển Bàn" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        Name="switchWindow">

    <materialDesign:Card UniformCornerRadius="15" Margin="10" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Background="#673AB7">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="SwapHorizontal" Width="25" Height="25" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="CHUYỂN BÀN" Foreground="White" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                               FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <!-- Body -->
            <StackPanel Grid.Row="1" Margin="30,20" VerticalAlignment="Center">
                <TextBlock Text="Chọn bàn muốn chuyển đến:" Foreground="Gray" Margin="0,0,0,10"/>

                <!-- ComboBox hiển thị danh sách bàn trống -->
                <ComboBox Name="cbTableList" 
                          DisplayMemberPath="Name" 
                          SelectedValuePath="Id"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          materialDesign:HintAssist.Hint="Danh sách bàn trống"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                <Button Content="Hủy" IsCancel="True" 
                        Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,10,0"
                        Click="BtnCancel_Click"/>

                <Button Content="Xác nhận" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="BtnConfirm_Click"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>