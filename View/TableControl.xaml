<UserControl x:Class="QuanLyNhaHang.View.TableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">

    <Grid Background="#F0F2F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.65*"/>
            <!-- Cột Bàn (Trái) -->
            <ColumnDefinition Width="0.35*"/>
            <!-- Cột Hóa đơn (Phải) -->
        </Grid.ColumnDefinitions>

        <!-- ========================================== -->
        <!-- PHẦN 1: DANH SÁCH BÀN ĂN (BÊN TRÁI)      -->
        <!-- ========================================== -->
        <materialDesign:Card Grid.Column="0" Margin="10" UniformCornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <TextBlock Text="SƠ ĐỒ BÀN ĂN" FontSize="20" FontWeight="Bold" Margin="20,15,0,5" Foreground="#555"/>

                <!-- Danh sách Bàn -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding ListTable}" 
                             SelectedItem="{Binding SelectedTable}" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             HorizontalContentAlignment="Stretch">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="10"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border" BorderThickness="3" BorderBrush="Transparent" CornerRadius="10">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#673AB7"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <!-- QUAN TRỌNG: Gán Tag = DataContext (ViewModel) để ContextMenu dùng ké -->
                                <Border Width="110" Height="110" CornerRadius="10" ToolTip="Chuột phải để Đặt bàn"
                                        Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#81C784"/>
                                            <!-- Xanh: Trống -->
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Có người">
                                                    <Setter Property="Background" Value="#E57373"/>
                                                    <!-- Đỏ: Có khách -->
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Đặt trước">
                                                    <Setter Property="Background" Value="#FFB74D"/>
                                                    <!-- Cam: Đặt trước -->
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <!-- MENU CHUỘT PHẢI CHO BÀN -->
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <!-- Mục 1: Đặt bàn -->
                                            <MenuItem Header="Đặt bàn này" 
                                                      Command="{Binding PlacementTarget.Tag.BookTableCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <materialDesign:PackIcon Kind="CalendarCheck" Foreground="#FF9800"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <!-- Mục 2: Chuyển bàn -->
                                            <MenuItem Header="Chuyển bàn"
                                                       Command="{Binding PlacementTarget.Tag.SwitchTableCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <materialDesign:PackIcon Kind="SwapHorizontal" Foreground="Blue"/>
                                                </MenuItem.Icon>
                                            </MenuItem>


                                            <!-- Mục 3: Nhận bàn -->
                                            <MenuItem Header="Khách nhận bàn (Check-in)" 
                                                      Command="{Binding PlacementTarget.Tag.CheckInTableCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <materialDesign:PackIcon Kind="AccountCheck" Foreground="Green"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Border.ContextMenu>

                                    <StackPanel VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="TableFurniture" Width="40" Height="40" 
                                                                 HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" 
                                                   FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Status}" HorizontalAlignment="Center" 
                                                   Foreground="#EFEFEF" FontSize="12" FontStyle="Italic"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </materialDesign:Card>

        <!-- ========================================== -->
        <!-- PHẦN 2: GỌI MÓN & HÓA ĐƠN (BÊN PHẢI)     -->
        <!-- ========================================== -->
        <Grid Grid.Column="1" Margin="0,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Chọn món -->
                <RowDefinition Height="*"/>
                <!-- List món -->
                <RowDefinition Height="Auto"/>
                <!-- Thanh toán -->
            </Grid.RowDefinitions>

            <!-- 2.1 Khu vực Chọn món -->
            <materialDesign:Card Grid.Row="0" Margin="0,0,0,10" Padding="10" UniformCornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" materialDesign:HintAssist.Hint="Danh mục" Margin="0,0,5,10"
                                  ItemsSource="{Binding ListCategory}"
                                  DisplayMemberPath="Name"
                                  SelectedItem="{Binding SelectedCategory}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                        <ComboBox Grid.Column="1" materialDesign:HintAssist.Hint="Chọn món" Margin="5,0,0,10"
                                  ItemsSource="{Binding ListFood}"
                                  DisplayMemberPath="Name"
                                  SelectedItem="{Binding SelectedFood}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Numeric" VerticalAlignment="Center"/>
                            <TextBox Width="50" materialDesign:HintAssist.Hint="SL" 
                                     Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                     HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="THÊM MÓN" Margin="10,0,0,0" 
                                Command="{Binding AddFoodCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}" 
                                Background="#673AB7" BorderBrush="#673AB7"/>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <!-- 2.2 Danh sách món đã gọi -->
            <materialDesign:Card Grid.Row="1" UniformCornerRadius="10" VerticalAlignment="Stretch">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="THỰC ĐƠN ĐÃ GỌI" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

                    <ListView ItemsSource="{Binding ListBillInfo}" Margin="5"
                              SelectedItem="{Binding SelectedBillDetail}">

                        <!-- MENU CHUỘT PHẢI CHO MÓN ĂN -->
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Giảm số lượng / Hủy món" 
                                          Command="{Binding RemoveFoodCommand}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="MinusCircle" Foreground="Red"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Tên món" DisplayMemberBinding="{Binding FoodName}" Width="140"/>
                                <GridViewColumn Header="SL" DisplayMemberBinding="{Binding Count}" Width="40"/>
                                <GridViewColumn Header="Đơn giá" DisplayMemberBinding="{Binding Price, StringFormat={}{0:N0}}" Width="90"/>
                                <GridViewColumn Header="T.Tiền" DisplayMemberBinding="{Binding TotalPrice, StringFormat={}{0:N0}}" Width="90"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </materialDesign:Card>

            <!-- 2.3 Khu vực Tính tiền -->
            <materialDesign:Card Grid.Row="2" Margin="0,10,0,0" Padding="15" UniformCornerRadius="10" Background="#F5F5F5">
                <StackPanel>
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="Tổng tiền món:" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0}}" 
                                   FontWeight="Bold" FontSize="14" DockPanel.Dock="Right"/>
                    </DockPanel>

                    <DockPanel LastChildFill="False" Margin="0,5">
                        <TextBox Width="150" materialDesign:HintAssist.Hint="Mã giảm giá" 
                                 Text="{Binding DiscountCode, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                        <Button Content="Áp dụng" Command="{Binding ApplyDiscountCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="30" Margin="10,0,0,0" Padding="5,0"/>

                        <TextBlock Text="{Binding DiscountAmountMoney, StringFormat=- {0:N0}}" 
                                   DockPanel.Dock="Right" VerticalAlignment="Bottom" Foreground="Green"/>
                    </DockPanel>

                    <Separator Margin="0,5"/>

                    <DockPanel LastChildFill="False">
                        <TextBlock Text="THÀNH TIỀN:" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding FinalTotalPrice, StringFormat={}{0:N0} VNĐ}" 
                                   FontWeight="Bold" FontSize="24" DockPanel.Dock="Right" Foreground="#D32F2F"/>
                    </DockPanel>

                    <Button Content="THANH TOÁN" Height="50" Margin="0,10,0,0" FontSize="16" FontWeight="Bold"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#D32F2F" BorderBrush="#D32F2F"
                            Command="{Binding PayCommand}"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>