<UserControl x:Class="QuanLyNhaHang.View.StaffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUẢN LÝ NHÂN SỰ" FontSize="24" FontWeight="Bold" Margin="20" Foreground="#673AB7"/>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Danh sách nhân viên -->
            <DataGrid Grid.Column="0" ItemsSource="{Binding ListStaff}" AutoGenerateColumns="False" 
                      SelectedItem="{Binding SelectedStaff}" IsReadOnly="True" Margin="0,0,20,0" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding DisplayName}" Width="*"/>
                    <DataGridTextColumn Header="Tài khoản" Binding="{Binding UserName}" Width="100"/>
                    <DataGridTextColumn Header="Chức vụ" Binding="{Binding Position}" Width="100"/>
                    <DataGridTextColumn Header="Lương" Binding="{Binding Salary, StringFormat={}{0:N0}}" Width="100"/>
                    <DataGridTextColumn Header="Ngày vào" Binding="{Binding HireDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Form nhập liệu -->
            <StackPanel Grid.Column="1">
                <materialDesign:Card Padding="15" UniformCornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Thông tin nhân viên" FontWeight="Bold" Margin="0,0,0,15"/>

                        <TextBox materialDesign:HintAssist.Hint="Họ và tên" Margin="0,5"
                                 Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                        <TextBox materialDesign:HintAssist.Hint="Tên đăng nhập" Margin="0,5"
                                 Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                        <TextBox materialDesign:HintAssist.Hint="Chức vụ" Margin="0,5"
                                 Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                        <TextBox materialDesign:HintAssist.Hint="Lương cơ bản" Margin="0,5"
                                 Text="{Binding Salary, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                        <WrapPanel HorizontalAlignment="Center" Margin="0,25,0,0">
                            <Button Content="THÊM" Command="{Binding AddCommand}" Width="80" Margin="5" Background="#4CAF50" BorderBrush="Transparent"/>
                            <Button Content="SỬA" Command="{Binding EditCommand}" Width="80" Margin="5" Background="#FFC107" BorderBrush="Transparent"/>
                            <Button Content="XÓA" Command="{Binding DeleteCommand}" Width="80" Margin="5" Background="#F44336" BorderBrush="Transparent"/>
                        </WrapPanel>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>