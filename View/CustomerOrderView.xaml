<UserControl x:Class="QuanLyNhaHang.View.CustomerOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Background="White">

        <!-- ========================================================= -->
        <!-- MÀN HÌNH 1: CHỌN BÀN -->
        <!-- ========================================================= -->
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsTableSelected}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="VUI LÒNG CHỌN BÀN CỦA BẠN" FontSize="30" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#FF5722" Margin="0,0,0,30"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                    <ItemsControl ItemsSource="{Binding ListTable}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Width="130" Height="130" Margin="15"
                                        Command="{Binding DataContext.SelectTableCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedLightButton}">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="BorderBrush" Value="#4CAF50"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Có người">
                                                    <Setter Property="Background" Value="#E57373"/>
                                                    <Setter Property="BorderBrush" Value="#E57373"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Đặt trước">
                                                    <Setter Property="Background" Value="#FFB74D"/>
                                                    <Setter Property="BorderBrush" Value="#FFB74D"/>
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>

                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="TableFurniture" Width="50" Height="50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Status}" FontSize="12" HorizontalAlignment="Center" Opacity="0.8"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Grid>

        <!-- ========================================================= -->
        <!-- MÀN HÌNH 2: MENU MÓN ĂN -->
        <!-- ========================================================= -->
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsTableSelected}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:Card Grid.Row="0" Margin="10" Background="#FF9800" UniformCornerRadius="10">
                <DockPanel Margin="20">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="SilverwareVariant" Width="40" Height="40" Foreground="White"/>
                        <TextBlock Text="THỰC ĐƠN TỰ CHỌN" FontSize="24" FontWeight="Bold" Foreground="White" 
                                   VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="10,0">
                        <materialDesign:PackIcon Kind="Phone" VerticalAlignment="Center" Foreground="White"/>
                        <TextBox Width="120" materialDesign:HintAssist.Hint="SĐT Tích điểm" 
                                 Foreground="White" CaretBrush="White"
                                 Text="{Binding CustomerPhone, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Foreground="White"
                                 Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <materialDesign:Chip DockPanel.Dock="Right" Background="White" FontSize="16" FontWeight="Bold">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TableFurniture"/>
                            <TextBlock Text="{Binding CurrentTable.Name}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </materialDesign:Chip>
                </DockPanel>
            </materialDesign:Card>

            <!-- Danh sách món -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ListFood}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Thẻ Món Ăn -->
                            <materialDesign:Card Width="200"
                     Margin="10"
                     UniformCornerRadius="10"
                     materialDesign:ElevationAssist.Elevation="Dp4">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="140"/>
                                        <!-- Khu vực Ảnh -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Tên -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Giá & Nút -->
                                    </Grid.RowDefinitions>

                                    <!-- Ảnh Món Ăn -->
                                    <Border Grid.Row="0" Background="#F5F5F5" ClipToBounds="True" CornerRadius="10,10,0,0">
                                        <Grid>
                                            <!-- Icon dự phòng -->
                                            <materialDesign:PackIcon Kind="Food" Width="60" Height="60" 
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                                     Foreground="LightGray"/>

                                            <!-- Ảnh thật (nếu có link) -->
                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill"/>
                                        </Grid>
                                    </Border>

                                    <!-- Tên Món -->
                                    <TextBlock Grid.Row="1" Text="{Binding Name}" FontWeight="Bold" 
                                               FontSize="18" Margin="10,10,10,5" TextWrapping="Wrap" MaxHeight="50" TextTrimming="CharacterEllipsis"/>

                                    <!-- Giá & Nút -->
                                    <DockPanel Grid.Row="2" Margin="10,0,10,15">
                                        <TextBlock Text="{Binding Price, StringFormat={}{0:N0} đ}" 
                                                   Foreground="#D32F2F" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>

                                        <Button DockPanel.Dock="Right" Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                                Background="#FF9800" BorderBrush="#FF9800"
                                                ToolTip="Thêm vào giỏ" Width="40" Height="40"
                                                Command="{Binding DataContext.OrderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"/>
                                        </Button>
                                    </DockPanel>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>