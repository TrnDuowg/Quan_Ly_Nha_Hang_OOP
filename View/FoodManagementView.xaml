<UserControl x:Class="QuanLyNhaHang.View.FoodManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="QUẢN LÝ THỰC ĐƠN" FontSize="24" FontWeight="Bold" Margin="20" Foreground="#673AB7"/>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Danh sách món ăn -->
            <DataGrid Grid.Column="0" ItemsSource="{Binding ListFood}" AutoGenerateColumns="False" CanUserAddRows="False"
                      SelectedItem="{Binding SelectedFood}" IsReadOnly="True" Margin="0,0,20,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Tên món" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Giá" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="100"/>
                    <DataGridTextColumn Header="Mã DM" Binding="{Binding CategoryId}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Form nhập liệu -->
            <StackPanel Grid.Column="1">
                <materialDesign:Card Padding="10" UniformCornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Thông tin món" FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBox materialDesign:HintAssist.Hint="Tên món ăn" Margin="0,5"
                                 Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                        <TextBox materialDesign:HintAssist.Hint="Giá tiền" Margin="0,5"
                                 Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                        <TextBox materialDesign:HintAssist.Hint="Link Ảnh (URL)" Margin="0,5"
                             Text="{Binding ImageLink, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>       
                              <Image Source="{Binding ImageLink}" Height="100" Margin="0,10" Stretch="Uniform"/>
                        <ComboBox materialDesign:HintAssist.Hint="Danh mục" Margin="0,15"
                                  ItemsSource="{Binding ListCategory}"
                                  DisplayMemberPath="Name"
                                  SelectedItem="{Binding SelectedCategory}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>

                        <WrapPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="THÊM" Command="{Binding AddCommand}" Width="80" Margin="5" Background="#4CAF50" BorderBrush="Transparent"/>
                            <Button Content="SỬA" Command="{Binding EditCommand}" Width="80" Margin="5" Background="#FFC107" BorderBrush="Transparent"/>
                            <Button Content="XÓA" Command="{Binding DeleteCommand}" Width="80" Margin="5" Background="#F44336" BorderBrush="Transparent"/>
                        </WrapPanel>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>